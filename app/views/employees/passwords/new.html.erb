<div class="card">
  <div class="card-header">
    <h2>Forgot your password?</h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "employees/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
      </div>
      </p>
      
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'btn btn-dark' %>
  </div>
<% end %>
</p>

