<div class="shadow p-3 mb-5 bg-body rounded">
  <figure class="text-end">
    <figcaption class="block-footer">
      <strong>Giver:</strong>
      <%= kudo.giver.full_name %>
    </figcaption>

    <figcaption class="block-footer">
      <strong>Receiver:</strong>
      <%= kudo.receiver.full_name %>
    </figcaption>
  </figure>

  <h2 class="display-6">
    <strong>Title:</strong>
    <%= kudo.title %>
  </h2>

   <h3 class="display-8">
    Company value:
    <%= kudo.company_value.title %>
  </h3>

  <p class="lead">
    <em><%= kudo.content %></em>
  </p>

  <% if kudo.giver == current_employee %>
   <% if policy(kudo).update? %>
      <%= link_to 'Edit', edit_kudo_path(kudo), class:'btn btn-dark' %>
    <% else %>
      <%= link_to 'Edit', edit_kudo_path(kudo), class:'btn btn-dark disabled', aria: { hidden: true } %>
    <% end %>
  <% end %>
  <%= link_to 'Back', kudos_path, class:"btn btn-dark"%>
</div>
