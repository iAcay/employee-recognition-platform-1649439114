<div class="card mt-5">
  <div class="card-header">
    <h2>Edit employee</h2>
  </div>
 
  <div class="card-body">
    <%= form_with(model: [:admin_users, @employee]) do |form| %>
      <div class="form-group mt-3">
        <% @employee.errors.each do |error| %>
          <li><strong><%= error.full_message %></strong></li>
        <% end %>
      </div>

      <div class="row">
        <div class="col">
          <%= form.text_field :first_name, autofocus: true, autocomplete: "first-name", class:"form-control", placeholder:"First Name" %>
        </div>
        <div class="col">
          <%= form.text_field :last_name, autofocus: true, autocomplete: "last-name", class:"form-control", placeholder:"Last Name" %>
        </div>
      </div>

      <div class="field form-group mt-3">
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
      </div>
       
      <div class="field form-group mt-3">
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password" %>
      </div>

      <div class="field form-group mt-3">
        <%= form.number_field :number_of_available_kudos, in: 0..10, autofocus: true, class:"form-control", placeholder:"Number of kudos" %>
      </div>

      <div class="actions mt-3">
        <%= form.submit "Update", class: "btn btn-dark"%>
      </div>
    <% end %>

<%= link_to "Back", admin_users_employees_path, class: 'btn btn-outline-secondary mt-3' %>
