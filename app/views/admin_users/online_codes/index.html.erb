<div class="table-responsive mt-3">
  <table class="table table-striped table-bordered table-hover table caption-top">
    <caption class="text-center"><h1>Online Codes Admin Panel &#127545;</h1></caption>
    <thead class="table-dark">
      <tr class="text-center">
        <th>Online Code</th>
        <th>Reward</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% online_codes.each do |online_code| %>
        <tr class="text-center">
          <td><%= online_code.code %></td>
          <td><%= online_code.reward.title %></td>
          <td><%= online_code.status.titleize %></td>
          <td><%= link_to 'Edit', edit_admin_users_online_code_path(online_code), class: 'btn btn-outline-primary' %></td>
          <td><%= link_to 'Destroy', admin_users_online_code_path(online_code), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back to Admin Dashboard', dashboard_admin_users_pages_path, class:'btn btn-outline-secondary' %>
  <%= link_to 'New Online Code', new_admin_users_online_code_path, class:'btn btn-outline-primary' %>
  <%= link_to 'Import from CSV', new_import_from_csv_admin_users_online_codes_path, class:'btn btn-outline-success' %>  
</div>
