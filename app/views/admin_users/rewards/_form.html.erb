<div class="card-body">
  <%= form_with(model: [:admin_users, reward]) do |form| %>
    <div class="form-group mt-3">
      <% reward.errors.each do |error| %>
        <li><strong><%= error.full_message %></strong></li>
      <% end %>
    </div>

    <div class="field form-group mt-3">
      <%= form.label :title %>
        <%= form.text_field :title, autofocus: true, autocomplete: "title", class:"form-control", placeholder:"Title" %>
    </div>

    <div class="field form-group mt-3">
      <%= form.label :description %>
      <%= form.text_area :description, autofocus: true, autocomplete: "description", class:"form-control", placeholder:"Description" %>
    </div>

    <div class="field form-group mt-3">
      <%= form.label :price %>
      <%= form.number_field :price, autofocus: true, class:"form-control", placeholder:"Price" %>
    </div>

    <div class="field form-group mt-3">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.order(title: :asc), :id, :title, prompt: true, include_blank: 'Without category' %>
    </div>

    <div class="field form-group mt-3">
      <%= form.file_field :photo %>
    </div>

    <div class="actions mt-3">
      <%= form.submit(reward.new_record? ? "Create" : "Update", class: "btn btn-dark") %>
    </div>
  <% end %>

  <%= link_to "Back", admin_users_rewards_path, class: 'btn btn-outline-secondary mt-3' %>
</div>
