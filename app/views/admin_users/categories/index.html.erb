<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table caption-top">
    <caption class="text-center"><h1>Categories Admin Panel &#9986;</h1></caption>
    <thead class="table-dark">
      <tr class="text-center">
        <th>Category</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% categories.each do |category| %>
        <tr class="text-center">
          <td><%= category.title %></td>
          <td><%= link_to 'Edit', edit_admin_users_category_path(category), class: 'btn btn-outline-primary' %></td>
          <td><%= link_to 'Destroy', admin_users_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back to Admin Dashboard', dashboard_admin_users_pages_path, class:'btn btn-outline-secondary' %>
  <%= link_to 'New Category', new_admin_users_category_path, class:'btn btn-outline-primary' %> 
</div>
