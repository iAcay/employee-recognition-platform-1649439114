<div class="text-center mt-5">
  <h2><%= "Orders made by #{employee.full_name}:" %></h2>
</div>

<div class='card-body'>
  <div class="container col-9">
    <% orders.each do |order| %>
      <div class="field form-group mt-3">
      <% if order.status_delivered? %>
        <div class="p-3 mb-2 bg-secondary text-dark border border-4">
      <% else %>
        <div class="p-3 mb-2 bg-white text-dark border border-4">
      <% end %>
          <div class="row">
            <div class="col-6 text-start">
              <strong>Price:</strong>
              <%= order.reward_snapshot.price %>
            </div>
            <div class="col-6 text-end">
              <strong>Delivery method:</strong>
              <%= order.reward_snapshot.delivery_method %>
            </div>
          </div>  

          <h2 class="display-6 text-center">
            <%= order.reward_snapshot.title %>
          </h2>

          <div class="lead text-break text-center mb-3">
            <em><%= order.reward_snapshot.description %></em>
          </div>

          <figcaption class="block-footer text-end">
            <strong>Bought:</strong>
            <%= order.created_at.strftime('%d-%m-%Y %H:%M') %>
          </figcaption>
          <%= button_to 'Deliver', admin_users_order_path(order), method: :patch, data: { confirm: 'Are you sure? It cannot be undone later.' }, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  <%= link_to 'Back to Employees', admin_users_employees_path, class:'btn btn-outline-dark mt-3' %> 
  </div>
</div>

