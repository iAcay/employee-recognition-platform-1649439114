<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table caption-top">
    <caption class="text-center"><h1>Rewards &#127942;</h1></caption>
    <thead class="table-dark">
      <tr class="text-center">
        <th>Title</th>
        <th>Price</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% rewards.each do |reward| %>
        <tr class="text-center">
          <td><%= reward.title %></td>
          <td><%= reward.price %></td>
          <td><%= link_to 'Show', reward_path(reward), class: 'btn btn-outline-primary' %></td>
          <td><%= link_to 'Buy', buy_reward_rewards_path(reward), method: :post, data: { confirm: 'Are you sure you want to purchase this reward?' }, class: 'btn btn-outline-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
